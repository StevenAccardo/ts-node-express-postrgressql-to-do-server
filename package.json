{
    "name": "ts-express-rest-api-boilerplate",
    "version": "1.0.0",
    "engines": {
        "npm": "10.1.0",
        "node": "18.17.1"
    },
    "type": "module",
    "description": "A boilerplate for setting up a basic express API server with TypeScript.",
    "main": "index.ts",
    "scripts": {
        "build": "npm run lint && npx tsc",
        "test": "jest",
        "start": "NODE_ENV=production node build/index.js",
        "dev": "NODE_ENV=development concurrently \"npx tsc --watch\" \"nodemon -q build/index.js\"",
        "lint": "npx eslint \"./**/*.ts\" --cache --cache-strategy content --fix",
        "pretty": "npx prettier \"./**/*.ts\" --write"
    },
    "author": "Steven Accardo",
    "license": "ISC",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "dotenv": "^16.3.1",
        "express": "^5.0.0-beta.1",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.11.3",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.33.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/express": "^4.17.17",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/node": "^20.6.0",
        "@typescript-eslint/eslint-plugin": "^6.6.0",
        "concurrently": "^8.2.1",
        "eslint": "^8.49.0",
        "eslint-config-prettier": "9.0.0",
        "eslint-config-standard-with-typescript": "^39.0.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-n": "^16.0.2",
        "eslint-plugin-promise": "^6.1.1",
        "express-validator": "^7.0.1",
        "jest": "^29.6.4",
        "nodemon": "^3.0.1",
        "prettier": "3.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    }
}